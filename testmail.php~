<?php $to = 'mahieddine.yaker@gmail.com'; 
$subject = 'Test email using PHP'; 
$message = 'This is a test email message'; 
$headers = 'From: myaker@runiso.com' . "\r\n" . 'Reply-To: webmaster@example.com' . "\r\n" . 'X-Mailer: PHP/' . phpversion(); 
mail($to, $subject, $message, $headers, '-fmyaker@runiso.com'); 
?>